<ArgonTest>

    <Name>Int bit operators</Name>


    <InputSource name="test.argon"><![CDATA[

        import Ar._

        proc main(): Unit do
            puts ((0b1000 ||| 0b1).to_s())
            puts ((0b1000 ||| 0b1000).to_s())
            puts ((0b1000 &&& 0b1).to_s())
            puts ((0b1000 &&& 0b1000).to_s())
            puts ((0b1000 ^^^ 0b1).to_s())
            puts ((0b1000 ^^^ 0b1000).to_s())
            puts ((0b1000 <<< 0b3).to_s())
            puts ((0b1000 <<< -0b3).to_s())
            puts ((0b1000 >>> 0b3).to_s())
            puts ((0b1000 >>> -0b3).to_s())
            puts ((~~~0b1000).to_s())
            puts ((~~~0b1).to_s())
        end


    ]]></InputSource>

