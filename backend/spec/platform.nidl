package argon.codegen.platform;

import nobleidl.core;

@esexpr:(derive-codec)
record platform-spec {
    id: string;

    @esexpr:(keyword)
    options: platform-options-schema;
}

@esexpr:(derive-codec)
enum platform-options-schema {
    options {
        values: dict[platform-options-schema];
    },

    file,
    string,
    bool,
    int,
}

