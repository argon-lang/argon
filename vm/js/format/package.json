{
  "name": "@argon-lang/vm-format",
  "version": "0.0.1",
  "description": "Bytecode format for Argon VM",
  "type": "module",
  "exports": {
    "./lib/*.js": "./lib/*.js",
    "./lib/*": "./lib/*.js",
    "./proto/*.js": "./lib/proto/*.js",
    "./proto/*": "./lib/proto/*.js"
  },
  "scripts": {
    "codegen": "npm run protoc && npm run generate_instructions",
    "generate_instructions": "node generate_instructions.js",
    "protoc": "rimraf src/proto && mkdirp src/proto && protoc --ts_out src/proto --ts_opt ts_nocheck --proto_path ../../protobuf ../../protobuf/argonvm.proto",
    "build": "npm run codegen && tsc --project tsconfig.json"
  },
  "author": "argon-dev",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@protobuf-ts/plugin": "^2.8.1",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@protobuf-ts/runtime": "^2.8.1"
  }
}
